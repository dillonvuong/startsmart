<body>
    <div class="container-fluid">
        <div class="section d-none d-lg-block">
            <div class="row justify-content-center">
                <div class="col-6 justify-content-center align-self-start">
                    <hr />
                    <div class="row justify-content-start align-self-center">
                        <hr />
                        <h1 class="heading_2">Sign Up</h1>
                    </div>
                    <hr />
                    <div class="row justify-content-start ">
                        <form enctype="multipart/form-data" asp-controller="Account" asp-action="Create" method="post" class="mt-3">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row">
                                <div class="form-group_2 col">
                                    <label for="exampleFormControlInput1">First Name *</label>
                                    <input asp-for="FirstName" type="text" class="form-control" id="exampleFormControlInput1">
                                </div>
                                <div class="form-group_2 col">
                                    <label for="exampleFormControlInput1">Last Name *</label>
                                    <input asp-for="LastName" type="text" class="form-control" id="exampleFormControlInput1">
                                </div>
                            </div>
                            <hr />
                            <div class="form-group">
                                <label for="exampleFormControlInput1">Email address *</label>
                                <input asp-for="Email" type="email" class="form-control" id="exampleFormControlInput1">
                            </div>
                            <hr />
                            <div class="form-group">
                                <label for="exampleFormControlInput1">Password *</label>
                                <input asp-for="Password" type="password" class="form-control" id="exampleFormControlInput1">
                            </div>
                            <hr />
                            <div class="form-group">
                                <label for="exampleFormControlInput1">Confirm Password *</label>
                                <input asp-for="ConfirmPassword" type="password"  class="form-control" id="exampleFormControlInput1">
                            </div>
                            <hr /><hr /><hr />
                            <div class="form-group">
                                <label for="exampleFormControlInput1">MBTI Type <a class="mbti_link" href="https://www.16personalities.com/personality-types">Learn More</a></label>
                                <input asp-for="MBTI" type="text" class="form-control" id="exampleFormControlInput1" placeholder="ENFP">
                            </div><hr />
                            <div class="form-group">
                                <label for="exampleFormControlInput1">Interests</label>
                                <input asp-for="Interests" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Gaming, hiking...">
                            </div>
                            <hr />
                            <hr />

                            <div class="row justify-content-end">
                                <div class="col d-flex justify-content-end">
                                    <button type="submit" class="create_account_sign_up">Create Account</button>
                                </div>
                            </div>
                        </form>
                    </div>

                    
                </div>




                <div class="col-5  justify-content-end align-self-end ">
                    <div class="row justify-content-end">
                        <img class="success_img img-responsive" src="~/images/Success.png" />
                    </div>
                </div>

                <!-- <button asp-action="create" asp-controller="home"  class="sign_up_btn">Get Started</button>-->

            </div>
        </div>
    </div></div>
</body>
