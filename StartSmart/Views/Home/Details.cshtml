@model HomeDetailsViewModel

@{
    ViewBag.Title = "StartSmart Profile";
    var profilePicPath = "~/Images/" + (Model.User.ProfilePicture ?? "noimage.png");
}

<div class="profile">
    <h1 class="main_head">Profile</h1>
</div>

<div class="gen_info">
    <h2 class="gen_head">General Information</h2>
    <h6 class="NEM">Name</h6>
    <h6 class="NEM2">Email</h6>
    <h6 class="NEM3">MBTI</h6>

</div>
<h6 class="name">@Model.User.Name</h6>
<h6 class="email">@Model.User.Email</h6>
<h6 class="MBTI">None</h6>

<h2 class="ach_head">Achievements</h2>

<img class="el_1" src="~/images/el1.png" />
<img class="ach_1" src="~/images/icon-controller.png" />
<img class="el_2" src="~/images/el2.png" />
<img class="ach_2" src="~/images/icon-feedback.png" />
<img class="el_3" src="~/images/el3.png" />
<img class="ach_3" src="~/images/icon-event.png" />

<h2 class="event_head">Events Added</h2>
<h6 class="event_info">Coming soon!</h6>

<h2 class="conn_head">Connections</h2>
<h6 class="conn_info">Coming soon!</h6>

<h2 class="proj_head">My Projects</h2>
<h6 class="proj_info">Coming soon!</h6>

<div class="footer">
    <div class="logo_foot">
        <img class="foot_brand" src="~/images/brand_icon.png" alt="logo" />
        <h3 class="ss_logo">StartSmart</h3>
    </div>
    <div class="foot_els">
        <img class="foot_el1" src="~/images/foot_el1.png" />
        <img class="foot_el2" src="~/images/foot_el2.png" />
        <img class="foot_el3" src="~/images/foot_el3.png" />

    </div>
    

</div>






