@model HomeDetailsViewModel

@{
    ViewBag.Title = "StartSmart Profile";
}

<<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.User.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/noimage.png" />

                <h4>Email : @Model.User.Email</h4>
                <h4>Major : @Model.User.Major</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</div>
